{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "NODE_ENV=development tsx --env-file=.env --watch src/index.ts",
    "test": "NODE_ENV=test tsx --test $(find src/tests -name '*.test.ts')",
    "build": "rm -rf dist && tsc",
    "drop": "tsx ./src/utils/dropTables.ts",
    "migrate": "tsx ./src/utils/migrate.ts",
    "seed": "tsx ./src/utils/seed.ts",
    "db:reset": "npm run drop && npm run migrate && npm run seed"
  },
  "author": "frtavonatti",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.4",
    "umzug": "^3.8.2"
  }
}
